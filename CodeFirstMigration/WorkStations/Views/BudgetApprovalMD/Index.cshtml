
@{
    ViewBag.Title = "Budget Approval Page";
}
@section styles{



    <style>
        .ui-datepicker {
            z-index: 9999 !important;
        }

        .scrollable-content {
            max-height: 70vh;
            overflow-y: auto;
        }

        .hidden {
            display: none;
        }

        #ls_edit_trf_modal .modal-content {
            font-size: 13px;
            max-height: 85vh;
            overflow-y: auto;
        }

        #ls_edit_trf_modal .modal-body {
            padding-bottom: 0;
        }

            #ls_edit_trf_modal .modal-body .row {
                margin-bottom: 10px;
            }
    </style>
}
<div class="page-heading">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="card  shadow">
                        <div class="card-header" style="background-color:#e0e0e0">
                            <div class="row">
                                <div class="col-12 col-md-6 order-md-1 order-last">
                                    <h3>Budget Approval</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="table-responsive mt-2">
                                <table class="table table-striped table-hover" id="ls_EmpInfo_table">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Action</th>
                                            <th class="text-center">Employee Name</th>
                                            <th class="text-center">Company</th>
                                            <th class="text-center">Designation</th>
                                            <th class="text-center">Total Cost Required</th>
                                            <th class="text-center">Total Advance Required</th>
                                        </tr>
                                    </thead>
                                    <tbody id="ls_EmpInfo_table_tbody"></tbody>

                                </table>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <span class="badge bg-primary" id="ls_EmpInfo_table_info"></span>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center" id="spinner">
                                        <img src="~/Content/assets/vendors/svg-loaders/rings.svg" class="" style="width: 3rem" alt="audio"><span style="font-weight: 700">Loading...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <div class="modal fade bd-example-modal" id="ls_edit_trf_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        Budget Approval Form
                    </h5>
                    <button type="button" class="close text-white" data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_edit_trf_modal_form" name="ls_edit_trf_modal_form" class="needs-validation" novalidate>
                    <input type="hidden" id="ls_edit_trf_Id" />
                    <div class="modal-body">
                        <div class="scrollable-content">
                            <div class="row">

                                <div class="col-md-6 mb-3">
                                    <label for="ls_edit_ticketreq_currtype" class="form-label required">Currency Type</label>
                                    <select id="ls_edit_ticketreq_currtype" name="ls_edit_ticketreq_currtype" class="form-select" required>
                                        <option value="-1" disabled selected>Select Currency Type...</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Please select a Currency Type.
                                    </div>
                                </div>

                                <!-- Remarks -->
                                <div class="col-md-6 mb-3">
                                    <label for="ls_NeedleReq_edit_remarks" class="form-label">Remarks</label>
                                    <input id="ls_NeedleReq_edit_remarks" name="ls_NeedleReq_edit_remarks" class="form-control" />
                                </div>
                            </div>

                            <!-- Estimated Travel Cost -->
                            <div class="row">
                                <div class="card" style="border: 1px solid #25396f;">
                                    <div class="card-header">
                                        <h4 class="card-title">Estimated Travel Cost</h4>
                                    </div>
                                    <div class="card-body" style="padding: 0rem 1rem 1rem 1rem;">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover" id="ord_order_table">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 150px">Expenses</th>
                                                        <th style="width: 150px">Days</th>
                                                        <th style="width: 150px">Cost per Day</th>
                                                        <th style="width: 150px">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="ord_order_table_tbody">
                                                    <tr class="text-center add-item">
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Total Cost and Travel Advance -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="totalCostRequired_edit" class="form-label">Total Cost Required <span class="text-danger">*</span></label>
                                    <input id="totalCostRequired_edit" name="totalCostRequired_edit" class="form-control" required readonly />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="travelAdvanceApproved" class="form-label">Travel Advance Required <span class="text-danger">*</span></label>
                                    <input id="travelAdvanceApproved_edit" name="travelAdvanceRequired_edit" class="form-control" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*supervisor approve*@
    <!--requisition approve modal-->

    <div class="modal fade bd-example-modal" id="ls_approve_requisition_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Approve Budget
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_approve_requisition_modal_form" name="ls_approve_requisition_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_approve_hotelresv_id_hidden" name="ls_approve_hotelresv_id_hidden">
                        <p class="text-dark">Are you considering approving this record?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Approve</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


    <div class="modal fade bd-example-modal" id="ls_reject_requisition_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Reject Budget
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_reject_requisition_modal_form" name="ls_reject_requisition_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_reject_hotelresv_id_hidden" name="ls_reject_hotelresv_id_hidden">
                        <p class="text-dark">Are you confirming the rejection of this record?</p>
                        <div class="form-group">
                            <label for="reject_comments" class="text-dark">Comments:</label>
                            <textarea class="form-control" id="reject_comments" name="reject_comments" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reject</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>




@{
    ViewBag.Title = "Final Settlement Approval Page";
}
@section styles{



    <style>
        .ui-datepicker {
            z-index: 9999 !important;
        }

        #applicant-details-table {
            border-collapse: collapse;
            border: 1px solid #ddd;
        }

            #applicant-details-table th, #applicant-details-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            #applicant-details-table th {
                background-color: #f2f2f2;
            }

            #applicant-details-table center {
                display: block;
            }

        th {
            text-align: center;
        }

        .disabled {
            pointer-events: none;
            opacity: 0.5;
        }

    </style>
}
<div class="page-heading">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="card  shadow">
                        <div class="card-header" style="background-color:#e0e0e0">
                            <div class="row">
                                <div class="col-12 col-md-6 order-md-1 order-last">
                                    <h3>Final Settlement Approval</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">


                            <!--EmpInfo filter section start-->


                            <form class="form-inline" method="get" id="gatepass_filter_form" name="gatepass_filter_form">

                                <div class="row mt-3">

                                    <div class="col-lg-3 mb-1">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">
                                                Budget Approval NO
                                            </span>
                                            <input id="filter_disburse_no" name="filter_disburse_no" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Employee ID</span>
                                            <input id="ls_rp_EmpInfo_filter_Id" name="ls_rp_EmpInfo_filter_Id" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Company</span>
                                            <select class="form-control form-control form-select" id="ls_filter_rp_EmpInfo_Company" name="ls_filter_rp_EmpInfo_Company">
                                                <option value="">Select a Company</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Department</span>
                                            <select class="form-control form-control form-select" id="ls_filter_rp_EmpInfo_department" name="ls_filter_rp_EmpInfo_department">
                                                <option value="">Select a Department</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Designation</span>
                                            <select class="form-control form-control form-select" id="ls_filter_rp_EmpInfo_designation" name="ls_filter_rp_EmpInfo_designation">
                                                <option value="">Select a Designation</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3 mb-1">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">Status</span>
                                            <select id="filter_gatepass_status" name="filter_gatepass_status" class="form-control form-select">
                                                <option value="-1" selected>All...</option>
                                                <option value="0">Pending</option>
                                                <option value="1">Approved</option>
                                                <option value="2">Rejected</option>
                                            </select>
                                        </div>

                                    </div>

                                    <div class="col-lg-9"></div>

                                    <div class="col-lg-3">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-soft-blue" id="ls_filter_btn" name="ls_filter_btn">Filter</button>
                                        </div>
                                    </div>


                                </div>
                            </form>

                            <br />

                            <!--EmpInfo filter section end-->
                            <div class="table-responsive mt-2">
                                <table class="table table-striped table-hover" id="ls_EmpInfo_table">
                                    <thead>
                                        <tr>
                                            <th class="text-center">SL NO</th>
                                            <th class="text-center">Action</th>
                                            <th class="text-center"> Budget Approval NO</th>
                                            <th class="text-center">Employee ID NO</th>
                                            <th class="text-center">Name</th>
                                            <th class="text-center">Contact NO</th>
                                            <th class="text-center">Company</th>
                                            <th class="text-center">Department</th>
                                            <th class="text-center">Designation</th>
                                            <th class="text-center">Disbursed amount</th>
                                            <th class="text-center">Cost</th>
                                            <th class="text-center">Remaining Balance/Refund</th>
                                            <th class="text-center">Remarks (User)</th>
                                            <th class="text-center">Approve Status By Supervisor</th>
                                            <th class="text-center">Comments (If rejected By Supervisor)</th>
                                            <th class="text-center">Approved By Audit</th>
                                            <th class="text-center">Approved By Management</th>
                                            <th class="text-center">Comments (If rejected By Management)</th>
                                        </tr>
                                    </thead>
                                    <tbody id="ls_EmpInfo_table_tbody"></tbody>

                                </table>
                            </div>

                            <div class="row">
                                @*table info*@
                                <div class="col-md-4">
                                    <span class="badge bg-primary" id="ls_EmpInfo_table_info"></span>
                                </div>
                                @*table spinner*@

                                <div class="col-md-4">
                                    <div class="text-center" id="spinner">
                                        <img src="~/Content/assets/vendors/svg-loaders/rings.svg" class="" style="width: 3rem" alt="audio"><span style="font-weight: 700">Loading...</span>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    @*Modal*@
    <div class="modal fade bd-example-modal" id="ls_add_FSapproval_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title text-white">Final Settlement Approved</h5>
                    <button type="button" class="close text-white" data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>

                <form id="ls_add_FSapproval_modal_form" name="ls_add_FSapproval_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body" style="max-height:75vh;overflow:auto">
                        <!-- Applicant Details Table -->
                        <table class="table table-bordered table-striped mb-4">
                            <thead>
                                <tr>
                                    <th colspan="6" class="text-center">Applicant Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="2">Employee Name</td>
                                    <td colspan="4" id="applicant_name"></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Employee ID</td>
                                    <td colspan="4" id="applicant_employee_id"></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Company</td>
                                    <td colspan="4" id="applicant_company"></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Department</td>
                                    <td colspan="4" id="applicant_department"></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Designation</td>
                                    <td colspan="4" id="applicant_designation"></td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Team Member Details -->
                        <div class="card border-primary mb-3">
                            <div class="card-header">
                                <h4 class="card-title">Visa, Ticket and Hotel Reservation Requisitions Details</h4>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="ls_team_table_edit">
                                        <thead class="table-primary">
                                            <tr>
                                                <th>Visa Requisition No.</th>
                                                <th>Ticket Requisition No.</th>
                                                <th>Hotel Requisition No.</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ls_team_table_edit_tbody">
                                            <tr id="ginnuepig_edit" class="text-center add-item">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>


                                    </table>
                                </div>
                            </div>
                        </div>



                        <!-- Estimated Travel Cost -->
                        <div class="card mt-3" style="border: 1px solid #25396f;">
                            <div class="card-header">
                                <h4 class="card-title">Estimated Travel Cost</h4>
                            </div>
                            <div class="card-body" style="padding: 0rem 1rem 1rem 1rem;">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="ord_order_table">
                                        <thead>
                                            <tr>
                                                <th style="width: 150px">Expenses</th>
                                                <th style="width: 150px">Days</th>
                                                <th style="width: 150px">Cost per Day</th>
                                                <th style="width: 150px">Total</th>
                                                <th style="width: 150px">Disburse</th>
                                                <th style="width: 150px">Remarks</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ord_order_table_tbody">
                                            <tr class="text-center add-item">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="card mt-3" style="border: 1px solid #25396f;">
                                <div class="card-header">
                                    <h4 class="card-title">Travel Cost (Final Settlement)</h4>
                                </div>
                                <div class="card-body" style="padding: 0rem 1rem 1rem 1rem;">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover" id="ord_order_table_FS">
                                            <thead>
                                                <tr>
                                                    <th style="width: 150px">Expenses</th>
                                                    <th style="width: 150px">Days</th>
                                                    <th style="width: 150px">Cost per Day</th>
                                                    <th style="width: 150px">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody id="ord_order_table_FS_tbody">
                                                <tr class="text-center add-item">
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Form Fields -->
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="totalCostApproved">Total Disbursed Amount</label>
                                        <input id="totalCostApproved" name="totalCostDisbursed" class="form-control" readonly />
                                    </div>
                                    <div class="form-group mb-4">
                                        <label for="travelCost">Cost</label>
                                        <input id="travelCost" name="travelCost" class="form-control" readonly />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="travelBalance">Remaining Balance/Refund</label>
                                        <input id="travelBalance" name="travelBalance" class="form-control" readonly />
                                    </div>

                                    <div class="form-group mb-4">
                                        <label for="ls_NeedleReq_add_AmountApp">Amount Approved <span style="color: red;">*</span></label>
                                        <input id="ls_NeedleReq_add_AmountApp" name="ls_NeedleReq_add_AmountApp" class="form-control" required />
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <label for="travelComments">Comments</label>
                                        <input id="travelComments" name="travelComments" class="form-control" readonly />
                                    </div>

                                </div>

                            </div>

                            <div class="uploaded-design-edit-flight"></div>

                            <div class="uploaded-design-edit-hotel"></div>

                            <div class="uploaded-design-edit-food"></div>

                            <div class="uploaded-design-edit-transportation"></div>

                            <div class="uploaded-design-edit-others"></div>

                            <br />

                            <!-- Remarks -->
                            <div class="form-group mb-4">
                                <label for="ls_NeedleReq_add_remarks">Remarks</label>
                                <textarea id="ls_NeedleReq_add_remarks" name="ls_NeedleReq_add_remarks" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                    </button>
                    <button id="approve-btn" type="button" class="btn btn-success rounded-pill ml-1">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Approve</span>
                    </button>
                    <button id="reject-btn" type="button" class="btn btn-danger rounded-pill ml-1">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Reject</span>
                    </button>
                </div>
            </div>
        </div>
    </div>


    @*Approve and Rejection of Supervisor*@

    <div class="modal fade bd-example-modal" id="ls_reject_requisition_modal_sup">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Reject Final Settlement
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_reject_requisition_modal_form_sup" name="ls_reject_requisition_modal_form_sup" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_reject_sup_id_hidden" name="ls_reject_sup_id_hidden">
                        <p class="text-dark">Are you confirming the rejection of this record?</p>
                        <div class="form-group">
                                <label for="reject_comments_sup" class="text-dark">Comments:</label>
                                <textarea class="form-control" id="reject_comments_sup" name="reject_comments_sup" rows="3" required></textarea>
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reject</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    @*Approve and Rejection of Audit*@
    <div class="modal fade bd-example-modal" id="ls_reject_requisition_modal_audit">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Reject Final Settlement
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_reject_requisition_modal_form_audit" name="ls_reject_requisition_modal_form_audit" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_reject_audit_id_hidden" name="ls_reject_audit_id_hidden">
                        <p class="text-dark">Are you confirming the rejection of this record?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reject</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    @*supervisor approve*@
    <!--requisition approve modal-->

    <div class="modal fade bd-example-modal" id="ls_approve_requisition_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Approve Final Settlement
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_approve_requisition_modal_form" name="ls_approve_requisition_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_approve_hotelresv_id_hidden" name="ls_approve_hotelresv_id_hidden">
                        <p class="text-dark">Are you considering approving this record?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Approve</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


    <div class="modal fade bd-example-modal" id="ls_reject_requisition_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Reject Final Settlement
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_reject_requisition_modal_form" name="ls_reject_requisition_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_reject_hotelresv_id_hidden" name="ls_reject_hotelresv_id_hidden">
                        <p class="text-dark">Are you confirming the rejection of this record?</p>
                        <div class="form-group">
                            <label for="reject_comments" class="text-dark">Comments:</label>
                            <textarea class="form-control" id="reject_comments" name="reject_comments" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reject</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script>
        let userNo = '@TravelManagement.Utilities.MySession.Current.UserNo';
        let userRoleId = '@TravelManagement.Utilities.MySession.Current.UserRoleId';
    </script>

    <link href="~/content/assets/vendors/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/assets/vendors/jquery-ui/jquery-ui.js"></script>



    <script>
        $("#Approvals_li").addClass("active");
        $("#Approvals_ul").addClass("active");
        $("#finalSettlementApp").addClass("active");
    </script>


    <script src="~/WorkStations/Scripts/ls_FinalSettlementApproval.js"></script>

}



@{
    ViewBag.Title = "Disbursement";
}
@section styles{


    <style>
        .ui-datepicker {
            z-index: 9999 !important;
        }

        div.ui-datepicker {
            font-size: 10px;
        }

        #applicant-details-table {
            border-collapse: collapse;
            border: 1px solid #ddd;
        }

            #applicant-details-table th, #applicant-details-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            #applicant-details-table th {
                background-color: #f2f2f2;
            }

            #applicant-details-table center {
                display: block;
            }

        th {
            text-align: center;
        }

    </style>




}
<div class="page-heading">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="card  shadow">
                        <div class="card-header" style="background-color:#e0e0e0">
                            <div class="row">
                                <div class="col-12 col-md-6 order-md-1 order-last">
                                    <h3>
                                        Disbursement
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">

                            <form class="form-inline" method="get" id="gatepass_filter_form" name="gatepass_filter_form">

                                <div class="row mt-3">

                                    <div class="col-lg-3 mb-1">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">
                                                Budget Approval NO
                                            </span>
                                            <input id="filter_disburse_no" name="filter_disburse_no" class="form-control" />
                                        </div>
                                    </div>

                                    @*<div class="col-lg-3 mb-1">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text">
                                                    Visa Requisition NO
                                                </span>
                                                <input id="filter_visareq_no" name="filter_visareq_no" class="form-control" />
                                            </div>
                                        </div>*@

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Employee ID</span>
                                            <input id="ls_rp_EmpInfo_filter_Id" name="ls_rp_EmpInfo_filter_Id" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Company</span>
                                            <select class="form-control form-control form-select" id="ls_filter_rp_EmpInfo_Company" name="ls_filter_rp_EmpInfo_Company">
                                                <option value="-1">Select a Company</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Department</span>
                                            <select class="form-control form-control form-select" id="ls_filter_rp_EmpInfo_department" name="ls_filter_rp_EmpInfo_department">
                                                <option value="-1">Select a Department</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="input-group">
                                            <span class="input-group-text">Designation</span>
                                            <select class="form-control form-control form-select" id="ls_filter_rp_EmpInfo_designation" name="ls_filter_rp_EmpInfo_designation">
                                                <option value="-1">Select a Designation</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-soft-blue" id="ls_filter_btn" name="ls_filter_btn">Filter</button>
                                            @*<button type="button" class="btn btn-soft-blue" id="ls_add_disburse_btn" name="ls_add_disburse_btn">Disbursement</button>*@
                                        </div>
                                    </div>

                                </div>
                            </form>

                            <div class="table-responsive mt-2">
                                <table class="table table-striped table-hover" id="ls_disburse_table">
                                    <thead>
                                        <tr>
                                            <th class="text-center">SL NO</th>
                                            <th class="text-center">
                                                Budget Approval NO
                                            </th>
                                            <th class="text-center">Employee ID NO</th>
                                            <th class="text-center">Name</th>
                                            <th class="text-center">Contact NO</th>
                                            <th class="text-center">Company</th>
                                            <th class="text-center">Department</th>
                                            <th class="text-center">Designation</th>
                                            <th class="text-center">Required Cost</th>
                                            <th class="text-center">Required Advance</th>
                                            <th class="text-center">Remarks</th>
                                            <th class="text-center">Approval Status (Management)</th>
                                            <th class="text-center">Approved By</th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="ls_disburse_table_tbody"></tbody>

                                </table>
                            </div>



                            <div class="row">
                                @*table info*@
                                <div class="col-md-4">
                                    <span class="badge bg-primary" id="ls_disburse_table_info"></span>
                                </div>
                                @*table spinner*@

                                <div class="col-md-4">
                                    <div class="text-center" id="spinner">
                                        <img src="~/Content/assets/vendors/svg-loaders/rings.svg" class="" style="width: 3rem" alt="audio"><span style="font-weight: 700">Loading...</span>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--disburse add modal -->

    <div class="modal fade bd-example-modal" id="ls_add_disburse_modal">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title text-white">
                        Disbursement
                    </h5>
                    <button type="button" class="close text-white" data-bs-dismiss="modal" aria-label="Close">
                        <i class="feather-x"></i>
                    </button>
                </div>
                <div class="modal-body" style="max-height: 75vh; overflow: auto;">

                    <input type="hidden" class="form-control" id="ls_disb_id_hidden" name="ls_disb_id_hidden">

                    <form id="ls_add_disburse_modal_form" name="ls_add_disburse_modal_form" class="needs-validation" novalidate>
                        <!-- Applicant Details -->
                        <table id="applicant-details-table" style="width: 100%; margin: 0 auto; margin-top: 10px;">
                            <tr>
                                <th colspan="12"><center>Applicant Details</center></th>
                            </tr>
                            <tr>
                                <td>Employee Name </td>
                                <td id="applicant_name"></td>
                                <td>Employee ID </td>
                                <td id="applicant_employee_id"></td>
                                <td>Company</td>
                                <td id="applicant_company"></td>
                            </tr>
                            <tr>
                                <td>Department</td>
                                <td id="applicant_department"></td>
                                <td>Designation</td>
                                <td id="applicant_designation"></td>
                            </tr>
                        </table>

                        <br />

                        <div class="card border-primary mb-3">
                            <div class="card-header">
                                <h4 class="card-title">Visa, Ticket and Hotel Reservation Requisitions Details</h4>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="ls_team_table_edit">
                                        <thead class="table-primary">
                                            <tr>
                                                <th>Visa Requisition No.</th>
                                                <th>Ticket Requisition No.</th>
                                                <th>Hotel Requisition No.</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ls_team_table_edit_tbody">
                                            <tr id="ginnuepig_edit" class="text-center add-item">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>


                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <strong>Warning:</strong> By clicking 'Save', you confirm that the money has been successfully delivered.
                        </div>

                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-text">Currency</span>
                                        <input id="ls_add_disburse_currency1" name="ls_add_disburse_currency1" class="form-control" required readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Estimated Travel Cost -->
                        <div class="card mt-3" style="border: 1px solid #25396f;">
                            <div class="card-header">
                                <h4 class="card-title">Estimated Travel Cost</h4>
                            </div>
                            <div class="card-body" style="padding: 0rem 1rem 1rem 1rem;">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="ord_order_table">
                                        <thead>
                                            <tr>
                                                <th style="width: 150px">Expenses</th>
                                                <th style="width: 150px">Days</th>
                                                <th style="width: 150px">Cost per Day</th>
                                                <th style="width: 150px">Total</th>
                                                <th style="width: 150px">Disburse</th>
                                                <th style="width: 150px">Remarks</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ord_order_table_tbody">
                                            <tr class="text-center add-item">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Form Inputs -->
                        <div class="container mt-3">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">TRF No.<span style="color: red;">*</span></span>
                                        <input id="ls_add_disburse_trfno" name="ls_add_disburse_trfno" class="form-control" required readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Total Disbursed Amount -->
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Total Disbursed Amount<span style="color: red;">*</span></span>
                                        <input id="totalCostApproved" name="totalCostApproved" class="form-control" required readonly />
                                    </div>
                                </div>
                                <!-- Travel Advance Required -->
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Travel Advance Required</span>
                                        <input id="travelAdvanceApproved" name="travelAdvanceApproved" class="form-control" readonly />
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Disbursed Advance<span style="color: red;">*</span></span>
                                        <input id="travelAdvanceDisbursed" name="travelAdvanceDisbursed" class="form-control" required readonly />
                                    </div>
                                </div>
                            </div>

                            <!-- Remarks -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Remarks</span>
                                        <input id="ls_NeedleReq_add_remarks" name="ls_NeedleReq_add_remarks" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>


                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                    </button>

                    <button type="submit" id="saveButton" class="btn btn-primary rounded-pill ml-1">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Save</span>
                    </button>


                </div>
            </div>
        </div>
    </div>

    @*Employee Add Modal*@


    @*disburse delete modal*@
    <div class="modal fade bd-example-modal" id="ls_delete_disburse_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Delete disburse
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_delete_disburse_modal_form" name="ls_delete_disburse_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_delete_disburse_id_hidden" name="ls_delete_disburse_id_hidden">
                        <p class="text-dark">Do you really want to delete this record? This process cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Yes, Delete</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


</div>


@section scripts{


    <link href="~/content/assets/vendors/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/assets/vendors/jquery-ui/jquery-ui.js"></script>
    <script src="~/Content/assets/vendors/timepicker/timepicker.js"></script>

    <script src="~/WorkStations/Scripts/ls_disbursements.js"></script>

    <script>
        $("#WorkStations_li").addClass("active");
        $("#WorkStations_ul").addClass("active");
        $("#disbursments").addClass("active");
    </script>

}




@{
    ViewBag.Title = "Floors";
}
@section styles{

}
<div class="page-heading">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="card  shadow">
                        <div class="card-header" style="background-color:#e0e0e0">
                            <div class="row">
                                <div class="col-12 col-md-6 order-md-1 order-last">
                                    <h3>Floors</h3>
                                </div>
                                <div class="col-12 col-md-6 order-md-2 order-first">
                                    <div class="breadcrumb-header float-start float-lg-end">
                                        <a  class="btn btn-primary rounded-pill" data-toggle="modal" id="ls_add_floor_btn">Add Floor</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!--floor filter section start-->
                            <!--floor filter section end-->
                            <div class="table-responsive mt-2">
                                <table class="table table-striped table-hover" id="ls_floor_table">
                                    <thead>
                                        <tr>
                                            <th>SL NO</th>
                                            <th>Company Name</th>
                                            <th>Location Name</th>
                                            <th>Floor Name</th>
                                            <th>Floor Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="ls_floor_table_tbody"></tbody>

                                </table>
                            </div>

                            <div class="row">
                                <!--table info-->
                                <!--table spinner-->

                                <div class="col-md-4">
                                    <div class="text-center" id="spinner">
                                        <img src="~/Content/assets/vendors/svg-loaders/rings.svg" class="" style="width: 3rem" alt="audio"><span style="font-weight: 700">Loading...</span>
                                    </div>
                                </div>

                                <!--table pagination-->

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--floor add modal -->
    <div class="modal fade bd-example-modal" id="ModalAdd">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Add Floor
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalAdd_form" name="ModalAdd_form" class="needs-validation" novalidate>
                    <div class="modal-body">

                        @*dropdown, data from company table*@
                        <div class="form-group">
                            <label for="ls_add_floor_company"><span class="text-danger">*</span> Company Name</label>
                            <select id="ls_add_floor_company" name="ls_add_floor_company" class="form-control form-select" required>
                                <option value="-1" selected>Select Company...</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select company name.
                            </div>
                        </div>

                        @*dropdown, data from location table*@
                        <div class="form-group">
                            <label for="ls_add_floor_location"><span class="text-danger">*</span> Location Name</label>
                            <select id="ls_add_floor_location" name="ls_add_floor_location" class="form-control form-select" required>
                                <option value="-1" selected>Select Location...</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select location name.
                            </div>
                        </div>


                        @*floor*@
                        <div class="form-group">
                            <label for="ls_add_floor_name"><span class="text-danger">*</span> Floor Name</label>
                            <input type="text" class="form-control" id="ls_add_floor_name" name="ls_add_floor_name" placeholder="Enter floor name" required>
                            <div class="invalid-feedback">
                                Please enter floor name.
                            </div>
                        </div>

                        @*dropdown, Status*@
                        <div class="form-group">
                            <label for="ls_add_floor_status"><span class="text-danger">*</span> Floor Status</label>
                            <select id="ls_add_floor_status" name="ls_add_floor_status" class="form-control" required>
                                <option value="">Select Floor Status</option>
                                <option value="1" selected>Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Save</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


    <!--floor edit modal -->
    <div class="modal fade bd-example-modal" id="ModalEdit">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Edit Floor
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalEdit_form" name="ModalEdit_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" id="ls_edit_floor_Id" />

                        @*Company*@
                        <div class="form-group">
                            <label for="ls_edit_floor_company"><span class="text-danger">*</span> Company Name</label>
                            <select id="ls_edit_floor_company" name="ls_edit_floor_company" class="form-control form-select" required>
                                <option value="-1" selected>Select Company...</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select company name.
                            </div>
                        </div>

                        @*Location*@
                        <div class="form-group">
                            <label for="ls_edit_location_name"><span class="text-danger">*</span> Location Name</label>
                            <select id="ls_edit_location_name" name="ls_edit_location_name" class="form-control form-select" required>
                                <option value="-1" selected>Select Location...</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select location name.
                            </div>
                        </div>

                        @*Floor*@
                        <div class="form-group">
                            <label for="ls_edit_floor_name"><span class="text-danger">*</span> Floor Name</label>
                            <input type="text" class="form-control" id="ls_edit_floor_name" name="ls_edit_floor_name" placeholder="Enter floor name" required>
                            <div class="invalid-feedback">
                                Please enter floor name.
                            </div>
                        </div>

                        @*Status*@
                        <div class="form-group">
                            <label for="ls_edit_floor_status"><span class="text-danger">*</span> Floor Status</label>
                            <select id="ls_edit_floor_status" name="ls_edit_floor_status" class="form-control" required>
                                <option value="">Select Floor Status</option>
                                <option value="1" selected>Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Save Changes</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!--floor delete modal -->
    <div class="modal fade bd-example-modal" id="ModalDelete">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Delete Floor
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalDelete_form" name="ModalDelete_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_delete_floor_id_hidden" name="ls_delete_floor_id_hidden">
                        <p class="text-dark">Do you really want to delete this record? This process cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Yes, Delete</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


</div>


@section scripts{

    <script>
        $("#BasicSetups_li").addClass("active");
        $("#BasicSetups_ul").addClass("active");
        $("#floors").addClass("active");
    </script>

    <script src="~/BasicSetup/Scripts/ls_floors.js"></script>
}


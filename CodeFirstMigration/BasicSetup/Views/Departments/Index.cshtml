
@{
    ViewBag.Title = "Departments";
}
@section styles{

}
<div class="page-heading">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="card  shadow">
                        <div class="card-header" style="background-color:#e0e0e0">
                            <div class="row">
                                <div class="col-12 col-md-6 order-md-1 order-last">
                                    <h3>Department</h3>
                                </div>
                                <div class="col-12 col-md-6 order-md-2 order-first">
                                    <div class="breadcrumb-header float-start float-lg-end">
                                        <a  class="btn btn-primary rounded-pill" data-toggle="modal" id="ls_add_department_btn">Add Department</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <!--department filter section start-->
                            <!--department filter section end-->
                            <div class="table-responsive mt-2">
                                <table class="table table-striped table-hover" id="ls_department_table">
                                    <thead>
                                        <tr>
                                            <th>SL NO</th>
                                            <th>Department Name</th>
                                            <th>Department Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="ls_department_table_tbody"></tbody>

                                </table>
                            </div>

                            <div class="row">
                                <!--table info-->
                                <!--table spinner-->

                                <div class="col-md-4">
                                    <div class="text-center" id="spinner">
                                        <img src="~/Content/assets/vendors/svg-loaders/rings.svg" class="" style="width: 3rem" alt="audio"><span style="font-weight: 700">Loading...</span>
                                    </div>
                                </div>

                                <!--table pagination-->

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--department add modal -->
    <div class="modal fade bd-example-modal" id="ModalAdd">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Add Department
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalAdd_form" name="ModalAdd_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ls_add_department_name"><span class="text-danger">*</span> Department Name</label>
                            <input type="text" class="form-control" id="ls_add_department_name" name="ls_add_department_name" placeholder="Enter department name" required>
                            <div class="invalid-feedback">
                                Please enter department name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ls_add_department_status"><span class="text-danger">*</span> Department Status</label>
                            <select id="ls_add_department_status" name="ls_add_department_status" class="form-control" required>
                                <option value="">Select Department Status</option>
                                <option value="1" selected>Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Save</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


    <!--Department edit modal -->
    <div class="modal fade bd-example-modal" id="ModalEdit">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Edit Department
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalEdit_form" name="ModalEdit_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" id="ls_edit_department_Id" />
                        <div class="form-group">
                            <label for="ls_edit_department_name"><span class="text-danger">*</span> Department Name</label>
                            <input type="text" class="form-control" id="ls_edit_department_name" name="ls_edit_department_name" placeholder="Enter department name" required>
                            <div class="invalid-feedback">
                                Please enter department name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ls_edit_department_status"><span class="text-danger">*</span> Department Status</label>
                            <select id="ls_edit_department_status" name="ls_edit_department_status" class="form-control" required>
                                <option value="">Select Department Status</option>
                                <option value="1" selected>Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Save Changes</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!--department delete modal -->
    <div class="modal fade bd-example-modal" id="ModalDelete">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Delete Department
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalDelete_form" name="ModalDelete_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_delete_department_id_hidden" name="ls_delete_department_id_hidden">
                        <p class="text-dark">Do you really want to delete this record? This process cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Yes, Delete</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


</div>


@section scripts{

    <script>
        $("#BasicSetups_li").addClass("active");
        $("#BasicSetups_ul").addClass("active");
        $("#departments").addClass("active");
    </script>

    <script src="~/BasicSetup/Scripts/ls_departments.js"></script>

}


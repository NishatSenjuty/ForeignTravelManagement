

@{
    ViewBag.Title = "Companies";
    ViewBag.Version = "v1.1";
}
@section styles{

}

<div class="page-heading">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="card  shadow">
                        <div class="card-header" style="background-color:#e0e0e0">
                            <div class="row">
                                <div class="col-12 col-md-6 order-md-1 order-last">
                                    <h3>Companies</h3>
                                </div>
                                <div class="col-12 col-md-6 order-md-2 order-first">
                                    <div class="breadcrumb-header float-end float-lg-end">
                                        <a  class="btn btn-primary rounded-pill" data-toggle="modal" id="ls_add_company_btn">Add Company</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">

                            <!--company filter section end-->
                            <div class="table-responsive mt-2">
                                <table class="table table-striped table-hover" id="ls_company_table">
                                    <thead>
                                        <tr>
                                            <th>SL NO</th>
                                            <th>Company Short Name</th>
                                            <th>Company Name</th>
                                            <th>Company Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="ls_company_table_tbody"></tbody>

                                </table>
                            </div>

                            <div class="row">
                                <!--table info-->

                                @*<div class="col-md-4">
                                    <span class="badge bg-primary mt-3" id="ls_company_table_info"></span>
                                </div>*@
                                <!--table spinner-->

                                <div class="col-md-4">
                                    <div class="text-center" id="spinner">
                                        <img src="~/Content/assets/vendors/svg-loaders/rings.svg" class="" style="width: 3rem" alt="audio"><span style="font-weight: 700">Loading...</span>
                                    </div>
                                </div>


                                <!--table pagination-->
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--company add modal -->
    <div class="modal fade bd-example-modal" id="ls_add_company_modal" >
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Add Company
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalAdd" name="ModalAdd" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ls_add_company_short_name"><span class="text-danger">*</span> Company Short Name</label>
                            <input type="text" class="form-control rounded" id="ls_add_company_short_name" name="ls_add_company_short_name" placeholder="Enter company short name" required>
                            <div class="invalid-feedback">
                                Please enter company short name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ls_add_company_name"><span class="text-danger">*</span> Company Name</label>
                            <input type="text" class="form-control" id="ls_add_company_name" name="ls_add_company_name" placeholder="Enter company name" required>
                            <div class="invalid-feedback">
                                Please enter company name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ls_add_company_status"><span class="text-danger">*</span> Company Status</label>
                            <select id="ls_add_company_status" name="ls_add_company_status" class="form-control form-select" required>
                                <option value="">Select Company Status</option>
                                <option value="1" selected>Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Save</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!--company edit modal -->
    <div class="modal fade bd-example-modal" id="ModalEdit">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Edit Company
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ModalEdit_form" name="ModalEdit_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ls_edit_company_short_name"><span class="text-danger">*</span> Company Short Name</label>
                            <input type="text" class="form-control rounded" id="ls_edit_company_short_name" name="ls_edit_company_short_name" placeholder="Enter company short name" required>
                            <div class="invalid-feedback">
                                Please enter company short name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ls_edit_company_name"><span class="text-danger">*</span> Company Name</label>
                            <input type="text" class="form-control" id="ls_edit_company_name" name="ls_edit_company_name" placeholder="Enter company name" required>
                            <div class="invalid-feedback">
                                Please enter company name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ls_edit_company_status"><span class="text-danger">*</span> Company Status</label>
                            <select id="ls_edit_company_status" name="ls_edit_company_status" class="form-control form-select" required>
                                <option value="" selected>Select Company Status</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select company status.
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Save Changes</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!--company delete modal -->
    <div class="modal fade bd-example-modal" id="ls_delete_company_modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white">
                        Delete Company
                    </h5>
                    <button type="button" class="close text-white"
                            data-bs-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="ls_delete_company_modal_form" name="ls_delete_company_modal_form" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="ls_delete_company_id_hidden" name="ls_delete_company_id_hidden">
                        <p class="text-dark">Do you really want to delete this record? This process cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary rounded-pill" data-bs-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i><span class="d-none d-sm-block">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger rounded-pill ml-1">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Yes, Delete</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


</div>

@section scripts{

    <script>

        $("#BasicSetups_li").addClass("active");
        $("#BasicSetups_ul").addClass("active");
        $("#companies").addClass("active");
    </script>


    <script src="~/BasicSetup/Scripts/ls_companies.js"></script>


}


